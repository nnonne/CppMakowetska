#include <stdio.h>
#include <math.h>
double perimetr(double a,double b, double c){
    //double a,b,c;
    double p = a+b+c;
    return p;
}
double area(double a,double b,double c){
    double p = (a+b+c)/2,s;
    s = sqrt(p*(p-a)*(p-b)*(p-c));
    return s;
}
int main(){
    double a,b,c,p,s;
    printf("vvedit chusla\n");
    scanf("%lf",&a);
    scanf("%lf",&b);
    scanf("%lf",&c);
    p = perimetr(a,b,c);
    s = area(a,b,c);
    printf("p = %lf\n s = %lf",p,s);
    return 0;
}
